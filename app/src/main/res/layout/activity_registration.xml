<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical"
        android:gravity="center"
        >

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/bckicon"/>

    </LinearLayout>

    <LinearLayout style="@style/loginsinguplbl">
        <TextView
            android:text="SIGN UP"
            style="@style/login_signup_tv" />
        <View style="@style/view_style" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical"
        android:padding="@dimen/large_padding">
        <!--  Email Label -->

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/texthintColor"
            android:typeface="monospace">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/email"
                style="@style/EmailField"
                android:textColor="@color/textcolor"
                android:hint="@string/enter_your_e_mail" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- password -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/texthintColor">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/password"
                style="@style/PasswordField"
                android:textColor="@color/textcolor"
                android:hint="@string/password"/>
        </com.google.android.material.textfield.TextInputLayout>

<!--    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/email"
        style="@style/EmailField"
        android:hint="@string/enter_your_e_mail"
        android:textColor="#E6DCDC"
        android:textColorHint="#E6DCDC" />

    &lt;!&ndash;  Password Label &ndash;&gt;

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/password"
        style="@style/PasswordField"
        android:hint="@string/password"
        android:textColor="#E6DCDC"
        android:textColorHint="#E6DCDC" />-->


        //android:id="@+id/btn_Registration"
    <!--  Button CreateBtn -->

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_Registration"
            style="@style/Loginbtn"
            android:text="@string/create_account"
            app:cornerRadius="80dp"
            android:layout_marginTop="16dp"/>

    <!--  Button Login -->

    <com.google.android.material.button.MaterialButton
        android:id="@+id/login"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:textSize="@dimen/small_text_size"
        android:textColor="@color/texthintColor"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/already_a_member_login" />

    </LinearLayout>
</LinearLayout>
