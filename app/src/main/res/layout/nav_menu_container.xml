<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_marginTop="80dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:gravity="left"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/nav_button_margin"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/home" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/home_container"
                    style="@style/nav_button_style"
                    android:text="HOME" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/nav_button_margin"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:src="@drawable/sectionssmall" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/two_text_button"
                    style="@style/nav_button_style"
                    android:text="Details" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/nav_button_margin"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:padding="3dp"
                    android:src="@drawable/help" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/three_text_button"
                    style="@style/nav_button_style"
                    android:text="About us" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/nav_button_margin"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:src="@drawable/user" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/four_text_button"
                    style="@style/nav_button_style"
                    android:text="My Profile" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


    <RelativeLayout
        android:id="@+id/btm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/user_icon"
            android:padding="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:src="@drawable/usericon"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/user_name"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:text="username"
            android:textSize="20sp"
            android:layout_toRightOf="@+id/user_icon"
            android:visibility="gone"/>


        <ImageButton
            android:padding="10dp"
            android:id="@+id/logout_button"
            android:backgroundTint="@android:color/white"
            android:src="@drawable/logouticon"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:scaleType="fitCenter"
            android:layout_height="40dp"
            android:layout_width="wrap_content" />
    </RelativeLayout>

</RelativeLayout>