<?xml version="1.0" encoding="utf-8"?>
<com.ramotion.foldingcell.FoldingCell
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:folding-cell="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    folding-cell:additionalFlipsCount="3"
    folding-cell:animationDuration="700"
    folding-cell:backSideColor="@color/bgBackSideColor"
    android:id="@+id/foldingCell_project"
    folding-cell:cameraHeight="60">

    <!-- CONTENT (UNFOLDED) LAYOUT -->
    <include layout="@layout/cell_content_unfolded_layout" />

    <!-- TITLE (FOLDED) LAYOUT-->
    <include layout="@layout/cell_title_folded_layout" />

</com.ramotion.foldingcell.FoldingCell>